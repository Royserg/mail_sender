{
  "name": "mail-sender",
  "version": "0.1.0",
  "description": "Bulk email sender application",
  "private": true,
  "author": "Royserg",
  "main": "public/electron.js",
  "build": {
    "appId": "com.royserg.mailsender",
    "productName": "MailSender",
    "copyright": "MIT",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "extraResources": [
      {
        "from": "./db/",
        "to": "db/",
        "filter": [
          "**/* "
        ]
      },
      {
        "from": "./mailing_list",
        "to": "mailing_list/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "Mail utility"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "homepage": "./",
  "dependencies": {
    "@ant-design/icons": "^4.5.0",
    "@ant-design/pro-form": "^1.16.0",
    "@ant-design/pro-layout": "^6.14.2",
    "@craco/craco": "^6.1.1",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react-dom": "^16.9.8",
    "antd": "^4.12.3",
    "clsx": "^1.1.1",
    "craco-antd": "^1.19.0",
    "craco-less": "^1.17.1",
    "easy-peasy": "^4.0.1",
    "electron-is-dev": "^1.2.0",
    "node-pre-gyp": "^0.17.0",
    "nodemailer": "^6.4.17",
    "react": "^17.0.1",
    "react-css-theme-switcher": "^0.2.2",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.14.2",
    "react-papaparse": "^3.11.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.1",
    "typeorm": "^0.2.30",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4",
    "xlsx": "^0.16.9"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-start-craco": "craco start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "tsc:api": "tsc -p tsconfig.api.json",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "build": "npm run react-build && npm run electron-build",
    "start": "npm run gulp:less && npm run tsc:api && concurrently \"cross-env BROWSER=none npm run react-start-craco\" \"wait-on http://localhost:3000 && electron ./\" ",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "gulp:less": "npx gulp less"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.0",
    "@types/react": "^16.14.2",
    "@types/react-router-dom": "^5.1.7",
    "autoprefixer": "^10.2.4",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.4",
    "gulp": "^4.0.2",
    "gulp-csso": "^4.0.1",
    "gulp-debug": "^4.0.0",
    "gulp-less": "^4.0.1",
    "gulp-postcss": "^9.0.0",
    "less-plugin-npm-import": "^2.1.0",
    "postcss": "^8.2.6",
    "wait-on": "^5.2.1"
  }
}
